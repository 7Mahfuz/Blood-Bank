@model IEnumerable<DataLayer.Request>

@{
    ViewBag.Title = "MyRequests";
}

<h2>All Requests You have made</h2>

<p>
    @Html.ActionLink("Make another Requset", "Add",null, new { @class = "btn btn-primary btn-suscces" })
</p>
<table class="table">
    <tr>
        
        <th>
            @Html.DisplayNameFor(model => model.Blood)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GotBlood)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BloodNeed)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
       
        <td>
            @Html.DisplayFor(modelItem => item.Blood)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GotBlood)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PostDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BloodNeed)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }, new { @class = "btn btn-warning btn-sm" }) 
            
            @Html.ActionLink("Delete", "Delete", new { id=item.id }, new { @class = "btn btn-danger btn-sm" })
        </td>
    </tr>
}

</table>
